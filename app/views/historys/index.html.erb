<div class="container">	
	<div class="panel panel-default">
		<div class="panel-heading"><h3>Job History Log</h3></div>
		
		<div class="panel-body">
			<h4 class="text-success">Timezone: GMT+8 | CurrentJob: <%= @job.title %></h4>
			<%= link_to 'Back', user_jobs_path(@user), class: "btn btn-success" %>
		</div>
		<table class="table table-hover">
			<% @job.histories.order('id DESC').limit(5).each do |h| %>
			<tr><p class="text-info">Log StartTime:<%= h.created_at %></p>
				<textarea class="form-control" rows="20" readonly><%= h.log %></textarea>
			</tr>		
		<% end %>
		</table>
	</div>
</div>
<script>
window.setInterval(function(){
  /// call your function here
	location.reload();
	}, 15000);
</script>
